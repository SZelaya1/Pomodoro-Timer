<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.smartstudytool.PomodoroController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>
    <Label text="Pomodoro Timer" style="-fx-font-size: 24px; -fx-text-fill: #FF6F00; -fx-font-weight: bold;"/>
    <Label fx:id="timerLabel" text="25:00" style="-fx-font-size: 32px; -fx-text-fill: #FF4500; -fx-font-weight: bold;"/>
    <Label fx:id="statusLabel" text="Status: Ready" style="-fx-text-fill: #FF6F00;"/>
    <Label fx:id="sessionsLabel" text="Sessions Completed: 0" style="-fx-text-fill: #FF6F00;"/>
    <Label text="Press Start to Begin" style="-fx-text-fill: #FF4500;"/>
    <HBox alignment="CENTER" spacing="20.0">
        <Button fx:id="startButton" text="Start" onAction="#handleStart"
                style="-fx-background-color: #FF6F00; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10px 20px; -fx-font-weight: bold;"/>
        <Button fx:id="pauseButton" text="Pause" onAction="#handlePause"
                style="-fx-background-color: #FF8C00; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10px 20px; -fx-font-weight: bold;"/>
        <Button text="Reset" onAction="#handleReset"
                style="-fx-background-color: #FF4500; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10px 20px; -fx-font-weight: bold;"/>
    </HBox>
    <Button text="Settings" onAction="#handleSettings"
            style="-fx-background-color: #FF6F00; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10px 20px; -fx-font-weight: bold;"/>
</VBox>
