<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.smartstudytool.PomodoroController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label text="Pomodoro Timer" style="-fx-font-size: 24px;" />
    <Label fx:id="timerLabel" text="25:00" style="-fx-font-size: 32px;" />
    <Label fx:id="statusLabel" text="Status: Ready" />
    <Label fx:id="sessionsLabel" text="Sessions Completed: 0" />
    <Label text="Press Start to Begin" />
    <HBox alignment="CENTER" spacing="20.0">
        <Button fx:id="startButton" text="Start" onAction="#handleStart"/>
        <Button fx:id="pauseButton" text="Pause" onAction="#handlePause"/>
        <Button text="Reset" onAction="#handleReset"/>
    </HBox>
    <Button text="Settings" onAction="#handleSettings"/>

</VBox>
